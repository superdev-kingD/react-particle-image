{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "esnext"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "declaration": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "typeRoots": ["node_modules/@types", "typings/index.d.ts"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules", 
    "typings",
    "build", 
    "dist", 
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ],
  "typedocOptions": {
    "out": "docs",
    "includes": "src",
    "stripInternal": true,
    "exclude": [
        "**/*.stories.tsx",
        "src/ParticleImage/index.ts",
        "src/ParticleImage/createImageUniverse.ts",
        "src/ParticleImage/useTransientParticleForce.ts",
        "src/universe/index.ts",
        "src/setupTests.ts",
        "src/utils.ts"
    ]
  }
}
